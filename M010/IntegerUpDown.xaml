<UserControl x:Class="M010.IntegerUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 DataContext="{Binding ElementName=UC}" Name="UC">
	<!--WICHTIG: Hier funktioniert RelativeSource nicht, weil sich RelativeSource Self auf das Window beziehen wird-->
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="20"/>
		</Grid.ColumnDefinitions>
		<TextBox Text="{Binding Counter}" FontSize="{Binding TextFontSize}" VerticalContentAlignment="Center"/>
		<UniformGrid Rows="2" Grid.Column="1">
			<Button Content="&#11205;" Click="{Binding}"/>
			<Button Content="&#11206;" Click="{Binding}"/>
		</UniformGrid>
	</Grid>
</UserControl>
